<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textColor">@color/chip_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipEndPadding">5dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinHeight">28dp</item>
        <item name="chipMinTouchTargetSize">28dp</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:checked">false</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:maxHeight">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:numStars">5</item>
        <item name="android:progressTint">@color/gold</item>
        <item name="android:secondaryProgressTint">@color/transparent</item>
        <item name="android:scaleX">1.3</item>
        <item name="android:scaleY">1.3</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:transformPivotY">0dp</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
</resources>